<Window x:Class="WpfMicVolumeLock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Microphone Volume Lock"
        Height="610"
        Width="540"
        WindowStartupLocation="CenterScreen"
        Icon="/favicon.ico"
        ResizeMode="CanMinimize"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <!-- Theme Color Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F3F3F3"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextBrush" Color="#323130"/>
        <SolidColorBrush x:Key="SubtextBrush" Color="#605E5C"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#D1D1D1"/>
        <SolidColorBrush x:Key="StatusBackgroundBrush" Color="#F8F9FA"/>
        <SolidColorBrush x:Key="StatusBorderBrush" Color="#E1E5E9"/>
        <SolidColorBrush x:Key="FooterTextBrush" Color="#8A8886"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stop Button Style -->
        <Style x:Key="StopButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#D13438"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B92B2F"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#A12226"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="36"/>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- 0: Header -->
            <RowDefinition Height="24"/>     <!-- 1: Spacer -->
            <RowDefinition Height="Auto"/>   <!-- 2: Mic device -->
            <RowDefinition Height="Auto"/>   <!-- 3: Output device -->
            <RowDefinition Height="24"/>     <!-- 4: Spacer -->
            <RowDefinition Height="Auto"/>   <!-- 5: Volume setting -->
            <RowDefinition Height="Auto"/>   <!-- 6: Warning message (changed from 32 to Auto) -->
            <RowDefinition Height="32"/>     <!-- 7: Spacer (new, pushes buttons down) -->
            <RowDefinition Height="Auto"/>   <!-- 8: Control buttons (moved from 7 to 8) -->
            <RowDefinition Height="24"/>     <!-- 9: Spacer -->
            <RowDefinition Height="Auto"/>   <!-- 10: Status (moved from 9 to 10) -->
            <RowDefinition Height="*"/>      <!-- 11: Filler -->
            <RowDefinition Height="Auto"/>   <!-- 12: Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Ellipse Width="32" Height="32" Fill="#0078D4" VerticalAlignment="Center" Margin="0,2,14,0"/>
            <TextBlock Text="🎤" FontSize="20" VerticalAlignment="Center" Margin="-44,-2,32,0" HorizontalAlignment="Center"/>
            <StackPanel>
                <TextBlock Text="Microphone Volume Lock" 
                          FontSize="20" 
                          FontWeight="SemiBold" 
                          Foreground="{DynamicResource TextBrush}"/>
                <TextBlock Text="Keep your microphone at a consistent volume level" 
                          FontSize="12" 
                          Foreground="{DynamicResource SubtextBrush}" 
                          Margin="0,2,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Device Selection -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Select Microphone Device" 
                      FontSize="14" 
                      FontWeight="SemiBold" 
                      Foreground="{DynamicResource TextBrush}" 
                      Margin="0,0,0,8"/>
            <ComboBox x:Name="comboDevices" 
          Style="{StaticResource ModernComboBox}"
          Foreground="Black"
          Background="{DynamicResource CardBackgroundBrush}">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#0078D4"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                                <Setter Property="Foreground" Value="Green"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>
        </StackPanel>

        <!-- Test Output Device Selection -->
        <StackPanel Grid.Row="3" Margin="0,12,0,0">
            <TextBlock Text="Select Test Output Device" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Foreground="{DynamicResource TextBrush}" 
                       Margin="0,0,0,8"/>
            <ComboBox x:Name="comboOutputDevices" 
                      Style="{StaticResource ModernComboBox}"
                      Foreground="Black"
                      Background="{DynamicResource CardBackgroundBrush}">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#0078D4"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                                <Setter Property="Foreground" Value="Green"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>
        </StackPanel>

        <!-- Spacer row for better separation -->
        <!-- No content in Grid.Row="4" -->

        <!-- Volume Setting -->
        <StackPanel Grid.Row="5">
            <TextBlock Text="Target Volume Level (%)" 
                      FontSize="14" 
                      FontWeight="SemiBold" 
                      Foreground="{DynamicResource TextBrush}" 
                      Margin="0,0,0,8"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <Slider x:Name="volumeSlider"
                        Grid.Column="0"
                        Minimum="0"
                        Maximum="100"
                        Value="100"
                        TickFrequency="10"
                        TickPlacement="BottomRight"
                        Height="36"
                        VerticalAlignment="Center"
                        ValueChanged="VolumeSlider_ValueChanged"/>
                <TextBox x:Name="volumeTextBox"
                         Grid.Column="1"
                         Style="{StaticResource ModernTextBox}"
                         Text="100"
                         TextAlignment="Center"
                         Margin="12,0,0,0"
                         TextChanged="VolumeTextBox_TextChanged"
                         PreviewTextInput="VolumeTextBox_PreviewTextInput"
                         DataObject.Pasting="VolumeTextBox_Pasting"/>
            </Grid>
        </StackPanel>

        <!-- Warning Message -->
        <TextBlock Grid.Row="6"
                   Foreground="OrangeRed"
                   Margin="0,8,0,0"
                   TextWrapping="Wrap"
                   FontWeight="SemiBold"
                   FontSize="13"
                   Text="Warning: Testing Microphone and Output Device may cause audio feedback loop. For best results, use headphones during testing."/>

        <!-- Spacer row to push buttons down -->
        <!-- No content in Grid.Row="7" -->

        <!-- Control Buttons -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnStart"
                   Content="🔒 Start Locking"
                   Style="{StaticResource ModernButton}"
                   Click="BtnStart_Click"
                   MinWidth="140"/>
            <Button x:Name="btnStop"
                   Content="🔓 Stop Locking"
                   Style="{StaticResource StopButton}"
                   Click="BtnStop_Click"
                   MinWidth="140"
                   Margin="16,0,0,0"
                   IsEnabled="False"/>
            <Button x:Name="btnTest"
                   Content="🧪 Test (Toggle)"
                   Style="{StaticResource ModernButton}"
                   Click="BtnTest_Click"
                   MinWidth="100"
                   Margin="16,0,0,0"/>
        </StackPanel>

        <!-- Status -->
        <Border Grid.Row="10" 
               Background="{DynamicResource StatusBackgroundBrush}" 
               BorderBrush="{DynamicResource StatusBorderBrush}" 
               BorderThickness="1" 
               CornerRadius="8" 
               Padding="16">
            <StackPanel>
                <TextBlock Text="Status" 
                          FontSize="14" 
                          FontWeight="SemiBold" 
                          Foreground="{DynamicResource TextBrush}" 
                          Margin="0,0,0,8"/>
                <TextBlock x:Name="lblStatus" 
                          Text="Select a microphone and click 'Start Locking' to begin" 
                          FontSize="13" 
                          Foreground="{DynamicResource SubtextBrush}" 
                          TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <TextBlock Grid.Row="12"
           Text="💡 Minimize to system tray to run in background"
           FontSize="11"
           Foreground="{DynamicResource FooterTextBrush}"
           HorizontalAlignment="Center"
           VerticalAlignment="Bottom"
           Padding="0,0,0,2"/>
    </Grid>
</Window>
